<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        style="@style/HeaderStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/otp_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP Code"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/otp_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/otp_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="6"
        android:gravity="center">

        <TextView
            android:id="@+id/otp_digit_1"
            style="@style/PinDigit"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/otp_digit_2"
            style="@style/PinDigit"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/otp_digit_3"
            style="@style/PinDigit"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/otp_digit_4"
            style="@style/PinDigit"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/otp_digit_5"
            style="@style/PinDigit"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/otp_digit_6"
            style="@style/PinDigit"
            android:layout_weight="1" />
    </LinearLayout>


    <GridLayout
        android:id="@+id/pin_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/otp_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <!-- PIN pad buttons -->
        <Button
            android:id="@+id/button1"
            style="@style/PinButton"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/PinButton"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/PinButton"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            style="@style/PinButton"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/PinButton"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/PinButton"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            style="@style/PinButton"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/PinButton"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/PinButton"
            android:text="9" />
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button0"
            style="@style/PinButton"
            android:text="0" />

        <Button
            android:id="@+id/button_delete"
            style="@style/PinButton"
            android:text="X" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


