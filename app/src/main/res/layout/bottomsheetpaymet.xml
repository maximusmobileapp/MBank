<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/btmpaymethods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment method"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="30dp"
            android:textSize="15dp"/>

        <ImageButton
            android:id="@+id/btmclosepay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btmpaymethods"
            android:src="@drawable/close"
            android:background="@color/transparent"
            android:layout_marginStart="230dp" />


        <CheckBox
            android:id="@+id/btmwithin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btmpaymethods"
            android:text="Within Bank"
            android:textSize="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="?attr/colorOnSurface"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:id="@+id/btmOtherbank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btmwithin"
            android:text="Other Bank"
            android:textSize="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="?attr/colorOnSurface"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/btmself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btmOtherbank"
            android:text="Self Bank"
            android:textSize="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="?attr/colorOnSurface"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btmclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear all"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/btmapply"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btmself" />

        <Button
            android:id="@+id/btmapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:textColor="?attr/colorSurface"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btmself"/>

    </RelativeLayout>


</RelativeLayout>